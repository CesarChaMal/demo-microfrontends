{
  "name": "demo-microfrontends",
  "version": "1.0.0",
  "description": "Demo Microfrontends with Single-SPA",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "cd single-spa-root && npm run serve",
    "install:all": "npm run install:root && npm run install:apps",
    "install:root": "cd single-spa-root && npm install",
    "install:apps": "npm run install:auth && npm run install:layout && npm run install:home && npm run install:angular && npm run install:vue && npm run install:react && npm run install:vanilla && npm run install:webcomponents && npm run install:typescript && npm run install:jquery && npm run install:svelte",
    "install:auth": "cd single-spa-auth-app && npm install",
    "install:layout": "cd single-spa-layout-app && npm install",
    "install:home": "cd single-spa-home-app && npm install",
    "install:angular": "cd single-spa-angular-app && npm install",
    "install:vue": "cd single-spa-vue-app && npm install",
    "install:react": "cd single-spa-react-app && npm install",
    "install:vanilla": "cd single-spa-vanilla-app && npm install",
    "install:webcomponents": "cd single-spa-webcomponents-app && npm install",
    "install:typescript": "cd single-spa-typescript-app && npm install",
    "install:jquery": "cd single-spa-jquery-app && npm install",
    "install:svelte": "cd single-spa-svelte-app && npm install",
    "build:all": "npm run build:auth && npm run build:layout && npm run build:home && npm run build:angular && npm run build:vue && npm run build:react && npm run build:vanilla && npm run build:webcomponents && npm run build:typescript && npm run build:jquery && npm run build:svelte",
    "build:auth": "cd single-spa-auth-app && npm run build",
    "build:layout": "cd single-spa-layout-app && npm run build",
    "build:home": "cd single-spa-home-app && npm run build",
    "build:angular": "cd single-spa-angular-app && npm run build:single-spa",
    "build:vue": "cd single-spa-vue-app && npm run build",
    "build:react": "cd single-spa-react-app && npm run build",
    "build:vanilla": "cd single-spa-vanilla-app && npm run build",
    "build:webcomponents": "cd single-spa-webcomponents-app && npm run build",
    "build:typescript": "cd single-spa-typescript-app && npm run build",
    "build:jquery": "cd single-spa-jquery-app && npm run build",
    "build:svelte": "cd single-spa-svelte-app && npm run build",
    "serve:root": "cd single-spa-root && npm run serve:root",
    "dev:all": "cd single-spa-root && npm run serve",
    "clean": "npm run clean:root && npm run clean:apps",
    "clean:root": "npx rimraf single-spa-root/node_modules single-spa-root/package-lock.json",
    "clean:apps": "npm run clean:auth && npm run clean:layout && npm run clean:home && npm run clean:angular && npm run clean:vue && npm run clean:react && npm run clean:vanilla && npm run clean:webcomponents && npm run clean:typescript && npm run clean:jquery && npm run clean:svelte",
    "clean:auth": "npx rimraf single-spa-auth-app/node_modules single-spa-auth-app/package-lock.json",
    "clean:layout": "npx rimraf single-spa-layout-app/node_modules single-spa-layout-app/package-lock.json",
    "clean:home": "npx rimraf single-spa-home-app/node_modules single-spa-home-app/package-lock.json",
    "clean:angular": "npx rimraf single-spa-angular-app/node_modules single-spa-angular-app/package-lock.json",
    "clean:vue": "npx rimraf single-spa-vue-app/node_modules single-spa-vue-app/package-lock.json",
    "clean:react": "npx rimraf single-spa-react-app/node_modules single-spa-react-app/package-lock.json",
    "clean:vanilla": "npx rimraf single-spa-vanilla-app/node_modules single-spa-vanilla-app/package-lock.json",
    "clean:webcomponents": "npx rimraf single-spa-webcomponents-app/node_modules single-spa-webcomponents-app/package-lock.json",
    "clean:typescript": "npx rimraf single-spa-typescript-app/node_modules single-spa-typescript-app/package-lock.json",
    "clean:jquery": "npx rimraf single-spa-jquery-app/node_modules single-spa-jquery-app/package-lock.json",
    "clean:svelte": "npx rimraf single-spa-svelte-app/node_modules single-spa-svelte-app/package-lock.json"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "http-server": "^14.1.1",
    "rimraf": "^5.0.5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/demo/microfrontends.git"
  },
  "keywords": [
    "microfrontends",
    "single-spa",
    "angular",
    "react",
    "vue",
    "javascript",
    "typescript",
    "webcomponents",
    "jquery",
    "svelte",
    "lit"
  ],
  "author": "Demo Team",
  "license": "MIT"
}